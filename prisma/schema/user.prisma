// MODELS -----------------------------------------------
model Address {
  id          String   @id @default(uuid())
  addressLine String
  floorDoor   String?
  postalCode  String
  locality    String
  province    String
  userId      String?  @unique
  user        User?    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([postalCode, province])
}

model User {
  id                  String    @id @default(uuid())
  email               String    @unique
  emailPersonal       String?   @unique
  firstName           String?
  lastName            String?
  phone               String?
  dni                 String?   @unique
  birthDate           DateTime?
  picture             String?
  passwordHash        String?
  isActive            Boolean   @default(true)
  deactivatedAt       DateTime?
  failedLoginAttempts Int       @default(0)
  lastLoginAt         DateTime?
  provider            String    @default("local")
  providerId          String?
  role                Role      @default(USER)

  address     Address?
  schedules   Schedule[]  // Relación opuesta con Schedule
  
  // Solicitudes creadas por el usuario
  requestsCreated   Request[] @relation("RequestsCreated")
  // Solicitudes gestionadas por administración
  requestsManaged   Request[] @relation("RequestsManaged")
  
  // Documentos subidos
  documentsUploaded RequestDocument[]
  // Documentos validados (como administrador)
  documentsValidated RequestDocument[] @relation("DocumentValidator")
  
  // Tareas creadas por el usuario (jefe de departamento)
  tasksCreated      Task[] @relation("TasksCreated")
  // Asignaciones de tareas
  taskAssignments   TaskAssignment[]
  
  // Votos emitidos
  votes             Vote[]
  
  // Logs de actividad
  activityLogs      ActivityLog[] @relation("ActivityActor")
  
  // NUEVO: Historial de estados en workflows configurables
  stateHistory      StateHistory[]
  
  // NUEVO: Notificaciones de workflow
  workflowNotifications WorkflowNotification[]
  
  // Calendarios creados (admin)
  calendarsCreated  Calendar[] @relation("CalendarsCreated")
  calendarEventsCreated CalendarEvent[] @relation("CalendarEventsCreated")
  
  // Eventos de calendario asignados (drag-drop)
  calendarAssignments UserCalendarEvent[]
  
  // Módulos donde es docente
  modulosDocente    ModuloProfesional[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive, role])
  @@index([provider, providerId])
}
